<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Chercher un intervenant" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMesIntervenants"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ma Liste"
                app:chipIcon="@android:drawable/checkbox_on_background" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFiltreType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMedecin"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medecin"
                    app:chipIcon="@android:drawable/checkbox_on_background" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAutre"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autre"
                    app:chipIcon="@android:drawable/checkbox_on_background" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFiltreMetier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

               <!-- <com.google.android.material.chip.Chip
                    android:id="@+id/chipGeneraliste"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generaliste"
                    android:visibility="invisible"
                    app:chipIcon="@android:drawable/checkbox_on_background" />-->

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSpecialite"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialite"
                    android:visibility="gone"
                    app:chipIcon="@android:drawable/checkbox_on_background" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipActivite"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activite"
                    android:visibility="gone"
                    app:chipIcon="@android:drawable/checkbox_on_background" />

            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/listMetier"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <AutoCompleteTextView
                    android:id="@+id/selectionMetier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selectionner"
                    android:inputType="none"
                    android:focusable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFiltreGeographique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDepartement"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departement"
                    android:visibility="gone"
                    app:chipIcon="@android:drawable/checkbox_on_background" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRegion"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Region"
                    android:visibility="gone"
                    app:chipIcon="@android:drawable/checkbox_on_background" />

            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/listGeo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/selectionGeo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Selectionner"
                    android:inputType="none"
                    android:focusable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAppliquerFiltre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Valider"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonRazFiltre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAZ"
            android:visibility="gone" />

    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/textRechercheIntervenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:dropDownWidth="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Saisir le Nom *"
        android:visibility="gone" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/listMesIntervenants"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <AutoCompleteTextView
            android:id="@+id/selectionMesIntervenants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selectionner"
            android:inputType="none"
            android:focusable="false"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/buttonAssocier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Associer"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonRdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ RDV"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonPrescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Prescription"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>